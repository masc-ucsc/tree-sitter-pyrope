Delegate <- (
  ,thing = fun() { ret 'DEL here' }
)

Delegator <- (
  ,delegate
  ,operation :$(comptime) = fun () {
    if delegate has 'thing' {
      delegate.thing()
    }else{
      'default implementation'
    }
  }
)

a:Delegator
puts a.operation // prints "default implementation"

a.delegate = 'A delegate may be any object'
puts a.operation // prints "default implementation"

a.delegate = :Delegate
puts a.operation // prints "DEL here"

