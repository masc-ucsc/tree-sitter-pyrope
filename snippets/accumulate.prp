

let accumulate = {|(...a)|
  var add = {|(a:string,b:string)| a ++ b }
  add   ++= {|(a:int   ,b:int   )| a +  b }

  var total = a[0]
  for i in a[1..] {
    total = acc(total,i)
  }
  ret total
}

comptime assert accumulate(1,2,3, add) == 6
comptime assert accumulate("a","b","c", add) == "abc"

accumulate(true,false,true) // compile error, 'add' does not have a valid function

